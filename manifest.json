{
    "manifest_version": 3,
    "name": "Twitter Bird",
    "description": "Let's get the bird back on twitter",
    "version": "1.0",
    "action":
    {
        "default_icon": "images/icon_512.png"
    },
    "content_scripts":
    [
        {
            "js":
            [
                "scripts/content.js"
            ],
            "css":
            [
                "content.css"
            ],
            "matches":
            [
                "https://twitter.com/*"
            ]
        }
    ],
    "web_accessible_resources":
    [
        {
            "resources":
            [
                "images/*"
            ],
            "matches":
            [
                "https://twitter.com/*"
            ]
        }
    ],
    "icons":
    {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png",
        "512": "images/icon_128.png"
    }
}